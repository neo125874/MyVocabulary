<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="vocabulary.android.com.myvocabulary.DisplayActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/txt_search"
            android:textSize="20dip"/>

        <com.ms.square.android.expandabletextview.ExpandableTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ex_txt_tr"
            android:layout_below="@+id/txt_search"
            android:layout_marginTop="10dip"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:expandableTextView="http://schemas.android.com/apk/res-auto"
            expandableTextView:animDuration="200">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@id/expandable_text" />
            <ImageButton
                android:id="@id/expand_collapse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:background="@android:color/transparent"/>
        </com.ms.square.android.expandabletextview.ExpandableTextView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/txt_syn"
            android:layout_below="@+id/ex_txt_tr"
            android:layout_marginTop="10dip"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_mean"
            android:layout_below="@+id/txt_syn"
            android:layout_marginTop="10dip"/>


        <com.ms.square.android.expandabletextview.ExpandableTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_ex"
            android:text="New Text"
            android:layout_below="@+id/txt_mean"
            android:layout_marginTop="10dip"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:expandableTextView="http://schemas.android.com/apk/res-auto"
            expandableTextView:animDuration="200">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@id/expandable_text"/>
            <ImageButton
                android:id="@id/expand_collapse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:background="@android:color/transparent"/>
        </com.ms.square.android.expandabletextview.ExpandableTextView>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/speak_btn"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dip"
            android:layout_alignTop="@+id/ex_txt_tr"
            android:text="Speak"/>
    </RelativeLayout>
</ScrollView>
